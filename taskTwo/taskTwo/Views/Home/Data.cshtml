<table id="report" class="table" cellpadding="0" cellspacing="0">
    <tr>
        <th>regions</th>
        <th>products</th>
        <th>sMonth</th>
        <th>cost</th>
        @*<th>costMonth</th>*@
        <th>cNumber</th>
        <th>sAmount</th>
        <th colspan="2">total</th>
    </tr>

    @{
        int totalCategory = 0;
        int totalCost = 0;
        int totalС1 = 0;
        int totalC2 = 0;
        int totalC3 = 0;
        foreach (var a in Model)
        {
            totalCategory += a.supplyAmount;
            <tr>
                <th>@a.supplyRegion</th>
                <th>@a.supplyPName</th>
                <th>@a.supplyMonth</th>
                <th>@a.costAmount1</th>
                @*<th>@a.costMonth1</th>*@
                <th>@a.supplyCNumber</th>
                <th>@a.supplyAmount</th>
                @if (a.supplyCNumber == "3")
                {
                    <th>Cost total = @a.costAmount1</th>
                    <th>Supply total = @totalCategory</th>
                }
                else
                {
                    <th colspan="2"></th>
                }
            </tr>
            if (a.supplyCNumber == "3")
            {
                totalCategory = 0;
            }
        }
        }
</table>



    <table class="table">
        <tr>
            <th></th>
            <th>Category 1</th>
            <th>Category 2</th>
            <th>Category 3</th>
        </tr>
        @{ 
            int c1 = 0;
            int c2 = 0;
            int c3 = 0;
            int cost = 0;
            foreach (var a in Model)
            {
                if (a.supplyCNumber == "1")
                {
                    c1 += a.supplyAmount;
                }
                if (a.supplyCNumber == "2")
                {
                    c2 += a.supplyAmount;
                }
                if (a.supplyCNumber == "3")
                {
                    c3 += a.supplyAmount;
                    cost += a.costAmount1;
                }
            }
            <tr>
                <th>Supply</th>
                <th>@c1</th>
                <th>@c2</th>
                <th>@c3</th>
            </tr>
            <tr>
                <th>Cost</th>
                <th colspan="2">@cost</th>
            </tr>
        }
    </table>
            
    <script>
        $(function () {
            //Created By: Brij Mohan
            //Website: http://techbrij.com
            function groupTable($rows, startIndex, total) {
                if (total === 0) {
                    return;
                }
                var i, currentIndex = startIndex, count = 1, lst = [];
                var tds = $rows.find('th:eq(' + currentIndex + ')');
                var ctrl = $(tds[0]);
                lst.push($rows[0]);
                for (i = 1; i <= tds.length; i++) {
                    if (ctrl.text() == $(tds[i]).text()) {
                        count++;
                        $(tds[i]).addClass('deleted');
                        lst.push($rows[i]);
                    }
                    else {
                        if (count > 1) {
                            ctrl.attr('rowspan', count);
                            groupTable($(lst), startIndex + 1, total - 1)
                        }
                        count = 1;
                        lst = [];
                        ctrl = $(tds[i]);
                        lst.push($rows[i]);
                    }
                }
            }
            groupTable($('#report tr:has(th)'), 0, 4);
            $('#report .deleted').remove();
        });
    </script>
